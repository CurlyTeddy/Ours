// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId     String     @id @map("user_id")
  email      String     @unique
  name       String
  password   String
  inviteCode InviteCode @relation(fields: [userId], references: [usedById])
  Todos      Todo[]

  @@map("user")
}

model InviteCode {
  code      String    @id @default(cuid())
  createdAt DateTime  @default(now()) @map("created_at")
  expireAt  DateTime  @map("expire_at")
  usedAt    DateTime? @map("used_at")
  usedById  String?   @unique @map("used_by")
  usedBy    User?

  @@map("invite_code")
}

model Todo {
  todoId      String    @id @default(cuid()) @map("todo_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  createdBy   User      @relation(fields: [createdById], references: [userId], onUpdate: Cascade, onDelete: Cascade)
  createdById String    @map("created_by")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  doneAt      DateTime? @map("done_at")
  title       String
  description String?
  priority    Float     @unique

  @@map("todo")
  @@index([priority])
}
