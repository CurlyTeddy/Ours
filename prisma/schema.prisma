// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId           String            @id @map("user_id")
  email            String            @unique
  name             String
  password         String
  image            String?
  inviteCode       InviteCode        @relation(fields: [userId], references: [usedById])
  Todos            Todo[]
  session          Session[]
  bulletinMessages BulletinMessage[]

  @@map("user")
}

model InviteCode {
  code      String    @id @default(cuid())
  createdAt DateTime  @default(now()) @map("created_at")
  expireAt  DateTime  @map("expire_at")
  usedAt    DateTime? @map("used_at")
  usedById  String?   @unique @map("used_by")
  usedBy    User?

  @@map("invite_code")
}

model Todo {
  todoId      String    @id @default(cuid()) @map("todo_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  createdBy   User      @relation(fields: [createdById], references: [userId], onUpdate: Cascade, onDelete: Cascade)
  createdById String    @map("created_by")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  doneAt      DateTime? @map("done_at")
  title       String
  description String?
  priority    Float     @unique
  imageKeys   String?   @map("image_keys")

  @@index([priority])
  @@map("todo")
}

model Session {
  sessionId String   @id @map("session_id")
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [userId], onUpdate: Cascade, onDelete: Cascade)
  expireAt  DateTime @map("expire_at")

  @@map("session")
}

model MomentPhoto {
  photoId   String   @id @default(cuid()) @map("photo_id")
  createdAt DateTime @default(now()) @map("created_at")
  imageKey  String   @map("image_key")

  @@map("moment_photo")
}

model BulletinMessage {
  messageId String   @id @default(cuid()) @map("message_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [userId], onUpdate: Cascade, onDelete: Cascade)
  content   String

  @@map("bulletin_message")
}
